<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="30dp"
    android:gravity="center_horizontal"
    tools:context=".Fragment.CategoriesFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:textSize="20sp"
        android:layout_gravity="start"
        android:layout_marginStart="20dp"
        android:textAlignment="viewStart"
        android:textStyle="bold"
        android:textColor="#333647"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto_mono_bold"
        android:text="Categories"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#7c82a1"
        android:layout_gravity="start"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/roboto_mono_bold"
        android:justificationMode="inter_word"
        android:text="Thousand of articles in each category"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="4dp"
        tools:listitem="@layout/tile_choices"
        android:layout_height="match_parent"
        android:id="@+id/staggered_recyclerView"/>

</LinearLayout>